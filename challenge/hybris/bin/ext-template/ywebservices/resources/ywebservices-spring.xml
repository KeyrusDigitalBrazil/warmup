	<!-- Beans needed for sample code -->
 
	
	<!-- Sample Converters and Populators -->
	<bean id="ywebservicesSampleAddressPopulator" class="ywebservicespackage.populators.SampleAddressPopulator" />

	<bean id="ywebservicesSampleAddressConverter" parent="abstractPopulatingConverter">
		<property name="targetClass" value="ywebservicespackage.data.AddressData" />
		<property name="populators">
			<list>
				<ref bean="ywebservicesSampleAddressPopulator" />
			</list>
		</property>
	</bean>

	<bean id="ywebservicesSampleUserPopulator" class="ywebservicespackage.populators.SampleUserPopulator">
		<property name="addressConverter" ref="ywebservicesSampleAddressConverter" />
	</bean>

	<bean id="ywebservicesSampleUserConverter" parent="defaultPopulatingConverter">
		<property name="targetClass" value="ywebservicespackage.data.UserData" />
		<property name="populators">
			<list>
				<ref bean="ywebservicesSampleUserPopulator" />
			</list>
		</property>
	</bean>
	
	<!-- Sample Services -->
	<bean id="ywebservicesSampleUserService" class="ywebservicespackage.services.impl.SampleUserServicesImpl" />
	
 	<!-- Sample facades -->
	<alias name="ywebservicesDefaultSampleFacades" alias="ywebservicesSampleFacades"/>
	<bean id="ywebservicesDefaultSampleFacades" class="ywebservicespackage.facades.impl.DefaultSampleFacades">
		<property name="userConverter" ref="ywebservicesSampleUserConverter" />
		<property name="sampleUserService" ref="ywebservicesSampleUserService" />
	</bean>		
			
	<beans profile="tenant_junit">
	<!-- Configuration needed for tests to run properly. -->
		<util:list id="jaxbTypeAdaptersList">
			<value>de.hybris.platform.webservicescommons.jaxb.adapters.DateAdapter</value>
			<value>de.hybris.platform.webservicescommons.jaxb.adapters.VariableMapAdapter</value>
			<value>de.hybris.platform.webservicescommons.jaxb.adapters.XSSStringAdapter</value>
		</util:list>
	
	
		<util:list id="jaxbContextClasses">
			<value>java.lang.Long</value>
			<value>java.lang.String</value>
			<value>java.util.ArrayList</value>
		</util:list>
	
		<bean id="jaxbWrapperSupport" class="de.hybris.platform.webservicescommons.jaxb.wrapper.JaxbWrapperSupport">
		<property name="wrapperFactories">
			<list>
				<bean class="de.hybris.platform.webservicescommons.jaxb.wrapper.impl.JaxbStringWrapperFactory"/>
				<bean class="de.hybris.platform.webservicescommons.jaxb.wrapper.impl.JaxbLongWrapperFactory"/>
				<bean class="de.hybris.platform.webservicescommons.jaxb.wrapper.impl.JaxbDoubleWrapperFactory"/>
				<bean class="de.hybris.platform.webservicescommons.jaxb.wrapper.impl.JaxbListWrapperFactory"/>
				<bean class="de.hybris.platform.webservicescommons.jaxb.wrapper.impl.JaxbMapWrapperFactory"/>
			</list>
		</property>
		</bean>
	</beans>
</beans>
