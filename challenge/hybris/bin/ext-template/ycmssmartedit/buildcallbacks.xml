<project name="ycmssmartedit_buildcallbacks">

    <patternset id="extension.ycmssmartedit.binary.filter">
        <patternset refid="extension.binary.filter"/>
        <exclude name="build/"/>
        <exclude name="smartedit-build/"/>
        <exclude name="node_modules/"/>
        <exclude name="jsTarget/"/>
        <exclude name="package.json"/>
    </patternset>

    <patternset id="extension.ycmssmartedit.source.filter">
        <patternset refid="extension.source.filter"/>
        <exclude name="build/"/>
        <exclude name="smartedit-build/"/>
        <exclude name="node_modules/"/>
        <exclude name="jsTarget/"/>
        <exclude name="package.json"/>
    </patternset>

    <patternset id="extension.ycmssmartedit.production.filter">
        <patternset refid="extension.production.filter"/>
        <exclude name="build/"/>
        <exclude name="smartedit-build/"/>
        <exclude name="node_modules/"/>
        <exclude name="jsTarget/"/>
        <exclude name="package.json"/>
    </patternset>

    <macrodef name="ycmssmartedit_before_clean">
        <sequential>
            <if>
				<available file="${ext.npmancillary.path}${file.separator}resources${file.separator}npm${file.separator}node_modules" type="dir"/>
                <then>
                    <delete dir="${ext.ycmssmartedit.path}${file.separator}temp"/>
                    <delete dir="${ext.ycmssmartedit.path}${file.separator}jsTarget"/>
                    <unLinkSmarteditBundle target="${ext.ycmssmartedit.path}"></unLinkSmarteditBundle>
                    <removeNodeModulesSymlink path="${ext.ycmssmartedit.path}"/>
                    <if>
                        <isset property="ext.cmssmartedit.path"/>
                        <then>
                            <echo level="info" message="copying ycmssmartedit features to the cmssmartedit extension"/>
                            <copy todir="${ext.cmssmartedit.path}/web/featureExtensions/ycmssmartedit" overwrite="true"
                                  verbose="true">
                                <fileset dir="${ext.ycmssmartedit.path}/web/features/">
                                    <include name="**/**.*"/>
                                </fileset>
                            </copy>
                        </then>
                    </if>
                </then>
            </if>
        </sequential>
    </macrodef>

    <macrodef name="ycmssmartedit_before_build">
        <sequential>
            <if>
				<available file="${ext.npmancillary.path}${file.separator}resources${file.separator}npm${file.separator}node_modules" type="dir"/>
                <then>
                    <linkSmarteditBundle target="${ext.ycmssmartedit.path}"></linkSmarteditBundle>
                    <gruntBuild path="${ext.ycmssmartedit.path}" phase="linting"/>
                </then>
            </if>
        </sequential>
    </macrodef>

    <macrodef name="ycmssmartedit_before_yunit">
        <sequential>
            <if>
				<available file="${ext.npmancillary.path}${file.separator}resources${file.separator}npm${file.separator}node_modules" type="dir"/>
                <then>
                    <gruntBuild path="${ext.ycmssmartedit.path}" phase="test_only"/>
                </then>
            </if>
        </sequential>
    </macrodef>

    <macrodef name="ycmssmartedit_before_extgen">
        <sequential>
            <unLinkSmarteditBundle target="${ext.ycmssmartedit.path}"></unLinkSmarteditBundle>
            <if>
				<available file="${ext.npmancillary.path}${file.separator}resources${file.separator}npm${file.separator}node_modules" type="dir"/>
                <then>
                    <removeNodeModulesSymlink path="${ext.ycmssmartedit.path}"/>
                </then>
            </if>
        </sequential>
    </macrodef>

</project>
