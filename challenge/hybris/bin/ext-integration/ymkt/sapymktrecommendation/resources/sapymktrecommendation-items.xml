<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">

	<itemtypes>
		<itemtype code="CMSSAPRecommendationComponent" generate="true" jaloclass="com.hybris.ymkt.recommendation.jalo.CMSSAPRecommendationComponent"
			extends="SimpleCMSComponent" autocreate="true">
			<description>Represents product recommendations for given context from SAP Marketing</description>
			<attributes>
				<attribute qualifier="title" generate="true" autocreate="true" type="localized:java.lang.String">
					<persistence type="property" />
					<modifiers read="true" write="true" optional="true" />
					<description>Attribute that stores the section title.</description>
				</attribute>
				<attribute qualifier="recotype" generate="true" autocreate="true" type="java.lang.String">
					<persistence type="property" />
					<modifiers read="true" write="true" optional="true" />
					<description>Attribute that stores the recommendation scenario to be used</description>
				</attribute>
				<attribute qualifier="leadingitemtype" generate="true" autocreate="true" type="java.lang.String">
					<persistence type="property" />
					<modifiers read="true" write="true" optional="true" />
					<description>Attribute that stores the item type to be used</description>
				</attribute>
				<attribute qualifier="leadingitemdstype" generate="true" autocreate="true" type="java.lang.String">
					<persistence type="property" />
					<modifiers read="true" write="true" optional="true" />
					<description>Attribute that stores the leading item data source type to be used</description>
				</attribute>
				<attribute qualifier="cartitemdstype" generate="true" autocreate="true" type="java.lang.String">
					<persistence type="property" />
					<modifiers read="true" write="true" optional="true" />
					<description>Attribute that stores the cart data source type to be used</description>
				</attribute>
				<attribute qualifier="includecart" generate="true" autocreate="true" type="boolean">
					<persistence type="property" />
					<defaultvalue>Boolean.FALSE</defaultvalue>
					<modifiers read="true" write="true" optional="true" />
					<description>Include the basket items as leading items</description>
				</attribute>
				<attribute qualifier="includerecent" generate="true" autocreate="true" type="boolean">
					<persistence type="property" />
					<defaultvalue>Boolean.FALSE</defaultvalue>
					<modifiers read="true" write="true" optional="true" />
					<description>Include the recently visited products as leading items</description>
				</attribute>
			</attributes>
		</itemtype>
		
		<itemtype code="CMSSAPOfferRecoComponent" generate="true" jaloclass="com.hybris.ymkt.recommendation.jalo.CMSSAPOfferRecoComponent"
				  extends="SimpleCMSComponent" autocreate="true">
			<description>Represents offer recommendations for given context from SAP Marketing</description>
			<attributes>		
				<attribute qualifier="recotype" generate="true" autocreate="true" type="java.lang.String">
					<persistence type="property" />
					<modifiers read="true" write="true" optional="true" />
					<description>Attribute that stores the recommendation scenario to be used</description>
				</attribute>
				<attribute qualifier="leadingitemtype" generate="true" autocreate="true" type="java.lang.String">
					<persistence type="property" />
					<modifiers read="true" write="true" optional="true" />
					<description>Attribute that stores the item type to be used</description>
				</attribute>
				<attribute qualifier="leadingitemdstype" generate="true" autocreate="true" type="java.lang.String">
					<persistence type="property" />
					<modifiers read="true" write="true" optional="true" />
					<description>Attribute that stores the leading item data source type to be used</description>
				</attribute>
				<attribute qualifier="cartitemdstype" generate="true" autocreate="true" type="java.lang.String">
					<persistence type="property" />
					<modifiers read="true" write="true" optional="true" />
					<description>Attribute that stores the cart data source type to be used</description>
				</attribute>
				<attribute qualifier="contentposition" generate="true" autocreate="true" type="java.lang.String">
					<persistence type="property" />
					<modifiers read="true" write="true" optional="true" />
					<description>Attribute that stores position of offer on page</description>
				</attribute>
				<attribute qualifier="includecart" generate="true" autocreate="true" type="boolean">
					<persistence type="property" />
					<defaultvalue>Boolean.FALSE</defaultvalue>
					<modifiers read="true" write="true" optional="true" />
					<description>Include the basket items as leading items</description>
				</attribute>
				<attribute qualifier="includerecent" generate="true" autocreate="true" type="boolean">
					<persistence type="property" />
					<defaultvalue>Boolean.FALSE</defaultvalue>
					<modifiers read="true" write="true" optional="true" />
					<description>Include the recently visited products as leading items</description>
				</attribute>				
			</attributes>
		</itemtype>
	</itemtypes>
</items>
