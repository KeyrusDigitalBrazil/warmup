	<itemtypes>
		<itemtype code="SubscriptionProductAddToCartComponent" autocreate="true"
				generate="true" extends="ProductAddToCartComponent"
				jaloclass="de.hybris.platform.sap.sapsubscriptionaddon.jalo.components.ProductAddToCartComponent">
				<description>Add to cart component, disables quantity for Subscription products.</description>
