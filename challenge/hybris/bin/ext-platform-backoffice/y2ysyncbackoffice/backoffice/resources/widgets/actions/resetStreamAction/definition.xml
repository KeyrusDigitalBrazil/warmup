<action-definition id="com.hybris.platform.y2ysync.resetstream" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

	<name>Reset Stream Action</name>
	<description>Resets all ItemVersionMarkers for selected stream (sets versionTS to the beginning
		of the epoch and activates deleted ItemVersionMarkers)</description>
    <author>hybris</author>
    <version>1.0</version>

    <actionClassName>de.hybris.platform.y2ysync.backoffice.actions.ResetStreamAction</actionClassName>

    <inputType>de.hybris.deltadetection.model.StreamConfigurationContainerModel</inputType>
    <outputType>java.lang.Object</outputType>

    <!-- folder icons with the icons must be created in the following directory: myextension/backoffice/resources/widgets/actions/myaction -->
    <iconUri>icons/icon_action_y2ystream_reset_default.png</iconUri>
    <iconHoverUri>icons/icon_action_y2ystream_reset_hover.png</iconHoverUri>
    <iconDisabledUri>icons/icon_action_y2ystream_reset_disabled.png</iconDisabledUri>

</action-definition>