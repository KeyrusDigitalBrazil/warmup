<action-definition id="com.hybris.platform.y2ysync.deletestream" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>Delete Stream Action</name>
    <description>Deletes all ItemVersionMarkers for selected stream (including ones that mark items as deleted)</description>
    <author>hybris</author>
    <version>1.0</version>

    <actionClassName>de.hybris.platform.y2ysync.backoffice.actions.DeleteStreamAction</actionClassName>

    <inputType>de.hybris.deltadetection.model.StreamConfigurationContainerModel</inputType>
    <outputType>java.lang.Object</outputType>

    <!-- folder icons with the icons must be created in the following directory: myextension/backoffice/resources/widgets/actions/myaction -->
    <iconUri>icons/icon_action_y2ystream_delete_default.png</iconUri>
    <iconHoverUri>icons/icon_action_y2ystream_delete_hover.png</iconHoverUri>
    <iconDisabledUri>icons/icon_action_y2ystream_delete_disabled.png</iconDisabledUri>

</action-definition>