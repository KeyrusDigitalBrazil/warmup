        </y:base>
    </context>
    <context type="CsCustomerEvent" component="base" parent="CsTicketEvent" merge-by="type">
        <y:base>
            <y:labels>
                <y:label>code + (interventionType!=null ? " - " + @labelService.getObjectLabel(interventionType) : "") + (reason!=null ? " (" + reason + ")" : "")</y:label>
