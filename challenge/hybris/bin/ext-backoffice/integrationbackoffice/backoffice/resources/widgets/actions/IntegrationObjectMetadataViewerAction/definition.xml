<action-definition id="integrationbackoffice.actions.integrationObjectMetadataViewerAction" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>Metadata Viewer</name>
    <description>Action to open a window displaying the Impex and EDMX forms of the Intgration Object</description>
    <version>1.0</version>

    <actionClassName>de.hybris.platform.integrationbackoffice.widgets.actions.IntegrationObjectMetadataViewerAction</actionClassName>

    <iconUri>/icons/icon_action_generate_meta_default.png</iconUri>
    <iconHoverUri>/icons/icon_action_generate_meta_hover.png</iconHoverUri>
    <iconDisabledUri>/icons/icon_action_generate_meta_disabled.png</iconDisabledUri>

    <sockets>
        <output type="de.hybris.platform.integrationservices.model.IntegrationObjectModel" id="openMetadataModal"/>
        <input type="java.lang.Boolean" id="actionState"/>
    </sockets>

</action-definition>