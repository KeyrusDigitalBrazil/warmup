<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">
	<itemtypes>
		<itemtype code="BackofficeRole" extends="UserGroup" jaloclass="com.hybris.backoffice.jalo.user.BackofficeRole">
			<attributes>
				<attribute type="StringCollection" qualifier="authorities" >
					<modifiers read="true" write="true" />
					<persistence type="property"/>
				</attribute>
			</attributes>
		</itemtype>

		<itemtype code="Principal" autocreate="false" generate="false">
			<attributes>
				<attribute qualifier="backOfficeLoginDisabled" type="java.lang.Boolean">
					<modifiers read="true" write="true" search="true" optional="true"/>
					<persistence type="property"/>
				</attribute>
			</attributes>
		</itemtype>

		<itemtype code="ExcelImportCronJob" extends="CronJob">
			<attributes>
				<attribute qualifier="excelFile" type="Media">
					<modifiers read="true" write="true" optional="false" />
					<persistence type="property" />
				</attribute>
				<attribute qualifier="referencedContent" type="Media">
					<modifiers read="true" write="true" optional="true" />
					<persistence type="property" />
				</attribute>
			</attributes>
		</itemtype>

		<itemtype code="ExcelImportJob" extends="ServicelayerJob" />

		<itemtype code="EnumCodeConstraint" autocreate="true" generate="true" extends="AttributeConstraint" jaloclass="com.hybris.backoffice.jalo.constraint.EnumCodeConstraint">
			<description>Custom constraint which checks if the approval status matches</description>
			<attributes>
				<attribute type="java.lang.String" qualifier="code">
					<description>Status to match</description>
					<modifiers read="true" write="true" search="true" optional="false" initial="true" />
		         	<persistence type="property" />
				</attribute>
				<attribute qualifier="annotation" type="java.lang.Class" redeclare="true">
					<modifiers write="false" initial="true" optional="false"/>
					<defaultvalue>com.hybris.backoffice.constraint.EnumCode.class</defaultvalue>
				</attribute>
			</attributes>
		</itemtype>

		<itemtype code="BackofficeConfigurationMedia" extends="CatalogUnawareMedia">
			<deployment table="BackofficeConfigMedias" typecode="6403" />
			<indexes>
		       	<index replace="true" name="Media_Code" unique="true">
	         		<key attribute="code"/>
	         	</index>
	        </indexes>
		</itemtype>
		

	</itemtypes>
</items>
