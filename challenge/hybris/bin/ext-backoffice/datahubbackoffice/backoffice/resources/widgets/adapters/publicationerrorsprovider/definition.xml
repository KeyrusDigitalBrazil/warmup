<widget-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						 xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd"
						 id="de.hybris.platform.datahubbackoffice.publicationerrors">

	<name>Publication Error Data Adapter</name>
	<description>Retrieves all errors associated with a given publication</description>
	<defaultTitle>Publication Error Data Adapter</defaultTitle>
	<author>hybris</author>
	<version>1.0</version>

    <view src="none"/>
    <controller class="de.hybris.platform.datahubbackoffice.presentation.widgets.publicationerrorsprovider.PublicationErrorsProviderController"/>

    <sockets>
        <input id="publication" type="com.hybris.datahub.dto.publication.TargetSystemPublicationData"/>
        <output id="errors" type="com.hybris.cockpitng.search.data.pageable.Pageable"/>
    </sockets>

	<keywords>
		<keyword>datahub</keyword>
	</keywords>

</widget-definition>