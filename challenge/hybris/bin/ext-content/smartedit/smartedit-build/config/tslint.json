{
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules"
    ],
    "rulesDirectory": [
        "./tslint/rules/generated"
    ],
    "rules": {
        "no-unused-expression": false,
        "no-bitwise": false,
        "js-deprecation": {
            "options": [
                1811,
                0
            ],
            "severity": "warning"
        },
        "no-duplicate-imports": true,
        "ordered-imports": [
            true,
            {
                "import-sources-order": "any",
                "named-imports-order": "lowercase-first"
            }
        ],
        "no-duplicate-variable": true,
        "no-var-keyword": true,
        "semicolon": [
            true
        ],
        "no-inner-declarations": [
            true,
            "function"
        ],
        "eofline": false,
        "indent": [
            false
        ],
        "quotemark": [
            false
        ],
        "max-line-length": [
            false
        ],
        "no-empty-interface": false,
        "object-literal-sort-keys": [
            false
        ],
        "member-access": [
            false,
            "check-accessor"
        ],
        "trailing-comma": [
            true
        ],
        "no-trailing-whitespace": [
            false
        ],
        "only-arrow-functions": [
            false
        ],
        "forin": true,
        "no-consecutive-blank-lines": false,
        "no-console": [
            true,
            "warn",
            "error",
            "info",
            "dir"
        ],
        "no-angle-bracket-type-assertion": true,
        "interface-name": [
            false
        ],
        "no-namespace": false,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore",
            "allow-trailing-underscore"
        ],
        "array-type": [true, "array"]
    },
    "jsRules": {
        "eofline": false,
        "js-deprecation": {
            "options": [
                6,
                6
            ],
            "severity": "warning"
        },
        "forin": false,
        "quotemark": [
            false
        ],
        "max-line-length": [
            false
        ],
        "object-literal-sort-keys": false,
        "no-trailing-whitespace": false,
        "trailing-comma": [
            true
        ],
        "no-consecutive-blank-lines": [
            false
        ],
        "jsdoc-format": false,
        // TODO: enable the rule and fix issues
        "no-empty": false,
        "no-string-throw": false,
        // TODO: enable the rule and fix issues
        "no-shadowed-variable": false,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore",
            "allow-trailing-underscore"
        ],
        "no-bitwise": false,
        "radix": false
    }
}
