<action-definition id="de.hybris.platform.warehousingbackoffice.actions.reallocateaction"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>reallocate.action</name>
    <description>Open reallocate popup in order to manually or automatically reallocate all or partial part of consignment entries</description>
    <author>hybris</author>
    <version>0.1</version>

    <actionClassName>de.hybris.platform.warehousingbackoffice.actions.reallocate.ReallocateAction</actionClassName>
    <inputType>de.hybris.platform.ordersplitting.model.ConsignmentModel</inputType>
    <outputType>de.hybris.platform.ordersplitting.model.ConsignmentModel</outputType>

    <iconUri>icons/icon_action_reallocation_default.png</iconUri>
    <iconHoverUri>icons/icon_action_reallocation_hover.png</iconHoverUri>
    <iconDisabledUri>icons/icon_action_reallocation_disabled.png</iconDisabledUri>


    <settings>
        <setting key="viewMode" default-value="iconAndText"/>
    </settings>

    <!-- Sockets definition-->
    <sockets>
        <output id="reallocateContext"/>
    </sockets>

</action-definition>
