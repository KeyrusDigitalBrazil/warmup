<action-definition id="de.hybris.platform.warehousingbackoffice.actions.returns.acceptgoods"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>acceptgoods.action</name>
    <description>Open Accept Goods popup in order to manually accept all or partial part of refund entries</description>
    <author>hybris</author>
    <version>0.1</version>

    <actionClassName>de.hybris.platform.warehousingbackoffice.actions.returns.acceptgoods.AcceptGoodsAction</actionClassName>
    <inputType>de.hybris.platform.returns.model.ReturnRequestModel</inputType>
    <outputType>de.hybris.platform.returns.model.ReturnRequestModel</outputType>

    <iconUri>icons/icon_action_acceptgoods_default.png</iconUri>
    <iconHoverUri>icons/icon_action_acceptgoods_hover.png</iconHoverUri>
    <iconDisabledUri>icons/icon_action_acceptgoods_disabled.png</iconDisabledUri>


    <settings>
        <setting key="viewMode" default-value="iconAndText"/>
    </settings>

    <!-- Sockets definition-->
    <sockets>
        <output id="acceptGoodsContext"/>
    </sockets>

</action-definition>
